{
    "name": "pdf-generator-backend",
    "version": "1.0.0",
    "description": "Backend para generador de PDFs con GraphQL",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "dev:clean": "rm -rf node_modules/.tsx && npm run dev",
        "build": "tsc",
        "start": "node dist/index.js",
        "generate-types": "graphql-codegen --config codegen.yml",
        "docker:dev": "docker-compose up --build",
        "docker:down": "docker-compose down",
        "docker:clean": "docker-compose down -v --remove-orphans",
        "typeorm": "typeorm-ts-node-commonjs",
        "schemas": "tsx scripts/setup-databases.ts",
        "seeds": "tsx scripts/seeds/seed-data.ts",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix"
    },
    "dependencies": {
        "@apollo/server": "^5.0.0",
        "@as-integrations/express4": "^1.1.2",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.21.2",
        "graphql": "^16.11.0",
        "graphql-tag": "^2.12.6",
        "handlebars": "^4.7.8",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.30.1",
        "mongoose": "^8.0.3",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "to-json-schema": "^0.2.5",
        "typeorm": "^0.3.27",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/body-parser": "^1.19.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.24",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.19.23",
        "@types/passport": "^1.0.16",
        "@types/passport-jwt": "^3.0.13",
        "@types/passport-local": "^1.0.38",
        "@types/pg": "^8.15.5",
        "@types/to-json-schema": "^0.2.4",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "eslint": "^8.52.0",
        "tsx": "^4.6.2",
        "typescript": "^5.2.2"
    },
    "keywords": [
        "pdf",
        "graphql",
        "nodejs",
        "typescript",
        "mongodb",
        "postgresql"
    ],
    "author": "Tu Nombre",
    "license": "MIT"
}
